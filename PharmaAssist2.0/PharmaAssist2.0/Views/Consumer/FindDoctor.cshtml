@model IEnumerable<PharmaAssist2._0.Models.Doctor>

@{
    ViewBag.Title = "FindDoctor";
}

<!--Links for views-->
<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<script src="~/Scripts/bootstrap.min.js"></script>

<script src="~/Scripts/jquery-3.6.0.min.js"></script>

<link rel="stylesheet" href="~/Content/all.css" />

<!--navbar-->
@RenderPage("~/Views/Consumer/ConsumerNavbar.cshtml")

<h2>FindDoctor</h2>



<div class="row">

    @foreach (var item in Model)
    {

        <div class="card" style="width: 18rem;">
            <img src="@Url.Content(item.Image)" class="card-img-top" alt="DoctorImage">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                <p class="card-text"><b>Specialist:</b> @Html.DisplayFor(modelItem => item.Specialist.Name) </p>
                <p class="card-text"><b>Phone:</b> @Html.DisplayFor(modelItem => item.Phone) </p>
                <p class="card-text"><b>Email:</b> @Html.DisplayFor(modelItem => item.Email) </p>
                <a href="/Doctor/Details/@item.Id" class="btn btn-success">Doctor Details</a>
                <a href="/Consumer/Appointment/@item.Id" class="btn btn-primary">Book Appointment</a>
            </div>
        </div>



    }
</div>